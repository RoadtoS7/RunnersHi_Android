<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottom_sheet_custom"
    android:layout_width="match_parent"
    android:layout_height="249dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_homebattle_other"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:paddingHorizontal="34dp"
        app:layout_constraintBottom_toTopOf="@+id/view">

        <TextView
            android:id="@+id/tv_homebattle_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="3sp"
            android:gravity="center_horizontal"
            tools:text="다른 러너와 경쟁하기"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_homebattle_other"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_enter" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <view
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="34dp"
        android:background="@color/very_light_pink"
        android:gravity="center_vertical"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ly_homebattle_me"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:paddingHorizontal="34dp"
        app:layout_constraintBottom_toTopOf="@+id/view">

        <TextView
            android:id="@+id/tv_homebattle_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="3sp"
            android:gravity="center_horizontal"
            tools:text="나의 기록과 경쟁하기"
            android:fontFamily="@font/nanumsquareb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_homebattle_me"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_enter" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>