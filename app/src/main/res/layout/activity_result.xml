<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#f5f5f5"
    tools:context=".result.ResultActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_share" />

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:textColor="@color/brown_grey"
        android:lineSpacingExtra="15sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="TRY AGAIN"
        android:fontFamily="@font/notosans_extrabolditalic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_marginTop="56dp"
        android:layout_height="wrap_content"
        android:background="@drawable/whitebox_resultactivity_myrecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_result_title">

        <TextView
            android:id="@+id/tv_resultdetail_distdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/notosans_extrabolditalic"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="15sp"
            android:text="4.43"
            android:textColor="@color/black"
            android:textSize="42sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResultDetailDistTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="킬로미터"
            android:fontFamily="@font/nanumsquarer"
            android:textColor="@color/brownish_grey"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultdetail_distdata" />

        <TextView
            android:id="@+id/tv_resultdetail_pacedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:lineSpacingExtra="12sp"
            android:gravity="center_horizontal"
            android:text="8’22”"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:fontFamily="@font/notosans_extrabolditalic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResultDetailDistTitle" />

        <TextView
            android:id="@+id/tvResultDetailPace"
            android:layout_marginTop="2dp"
            android:text="평균 페이스"
            android:layout_marginBottom="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/brownish_grey"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanumsquarer"
            app:layout_constraintEnd_toEndOf="@+id/tv_resultdetail_pacedata"
            app:layout_constraintStart_toStartOf="@+id/tv_resultdetail_pacedata"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultdetail_pacedata" />

        <TextView
            android:id="@+id/tv_resultdetail_timedata"
            android:layout_marginEnd="38dp"
            android:text="30:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="12sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/notosans_extrabolditalic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvResultDetailDistTitle" />

        <TextView
            android:id="@+id/tvResultDetailTime"
            android:layout_marginTop="2dp"
            android:text="러닝시간"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/brownish_grey"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/nanumsquarer"
            app:layout_constraintEnd_toEndOf="@+id/tvRecDetailTimeData"
            app:layout_constraintStart_toStartOf="@+id/tv_resultdetail_timedata"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultdetail_timedata"
            tools:ignore="DuplicateIds" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/smallwhitebox_recdetailactivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">


        <TextView
            android:id="@+id/tv_resultrival_rec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/nanumsquarer"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="6sp"
            android:text="성북천치타의 기록"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_resultrival_distdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_extrabolditalic"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10sp"
            android:text="4.23"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultrival_rec" />

        <TextView
            android:id="@+id/tvResultRivalDistDataTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/nanumsquarer"
            android:text="킬로미터"
            android:textColor="@color/brownish_grey"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_resultrival_distdata"
            app:layout_constraintStart_toStartOf="@+id/tv_resultrival_distdata"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultrival_distdata" />

        <TextView
            android:id="@+id/tv_resultrival_pacedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notosans_extrabolditalic"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10sp"
            android:text="6’88’’"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultrival_rec" />

        <TextView
            android:id="@+id/tvRecDetailRivalPaceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/nanumsquarer"
            android:text="페이스"
            android:textColor="@color/brownish_grey"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_resultrival_pacedata"
            app:layout_constraintStart_toStartOf="@+id/tv_resultrival_pacedata"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultrival_pacedata" />

        <TextView
            android:id="@+id/tv_resultrival_timedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="36dp"
            android:fontFamily="@font/notosans_extrabolditalic"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="10sp"
            android:text="1:30:00"
            android:textColor="@color/black"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultrival_rec" />

        <TextView
            android:id="@+id/tvResultRivalTimeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="26dp"
            android:fontFamily="@font/nanumsquarer"
            android:text="러닝시간"
            android:textColor="@color/brownish_grey"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_resultrival_timedata"
            app:layout_constraintStart_toStartOf="@+id/tv_resultrival_timedata"
            app:layout_constraintTop_toBottomOf="@+id/tv_resultrival_timedata" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imgv_result_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_result_title"
        app:srcCompat="@drawable/icon_redwomen_bunhair" />


    <Button
        android:id="@+id/btn_detail_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54dp"
        android:background="@drawable/btn_next"
        android:text="기록 자세히 보기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="9sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>