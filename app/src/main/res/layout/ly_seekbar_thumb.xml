<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:background="@drawable/smallwhitebox_runactivity_runnerprofile"
    android:gravity="center"
    android:paddingHorizontal="24dp">


    <TextView
        android:id="@+id/tv_run_nickname"
        style="@style/TextStyle9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="성북천치타"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgv_run_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/icon_redman_shorthair"
        app:layout_constraintEnd_toEndOf="@id/tv_run_nickname"
        app:layout_constraintStart_toStartOf="@id/tv_run_nickname"
        app:layout_constraintTop_toBottomOf="@id/tv_run_nickname"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>