<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team.runnershi">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".PrefInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".WaitMeActivity"/>
        <activity android:name=".MatchDummyActivity"
            android:exported="true"/>
        <activity android:name=".MatchFailActivity"
            android:exported="true"/>
        <activity
            android:name=".OnBoardActivity"
            android:exported="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true" />
        <service
            android:name=".SocketService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!-- naver map cliend id -->
        <meta-data
            android:name="com.naver.maps.map.CLIENT_ID"
            android:value="@string/naver_id" />
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".RunActivity"
            android:exported="true" />
        <activity
            android:name=".GoalActivity"
            android:exported="true"></activity>
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".MatchProcActivity"
            android:exported="true" />
        <activity android:name=".MatchSucActivity" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />
        <activity android:name=".StartRunActivity" />
        <activity android:name=".CountDownActivity" />
        <activity
            android:name=".HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity
            android:name=".ResultActivity"
            android:exported="true" />
        <activity android:name=".FinishRunActivity" />
        <activity android:name=".RivalActivity" />
        <activity
            android:name=".RecDetailActivity"
            android:exported="true" />
    </application>

</manifest>